<div class="page-header">
  <h1>
    Fares
    <a href="/fares/new" class="btn btn-lg btn-success">New Fare</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Origin</th>
        <th>Destination</th>
        <th>Actions</th>
      </tr>

      <% @fares.each do |fare| %>
      <tr>
        <td><%= fare.origin %></td>
        <td><%= fare.destination %></td>
        <td>
          <a href="/fares/<%= fare.id %>" class="btn btn-primary">Show</a>
          <a href="/fares/<%= fare.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_fare/<%= fare.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
