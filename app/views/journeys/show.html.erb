<div class="row">
  <div class="col-md-8 col-md-offset-2">

    <!-- Main panel -->
    <div class="panel panel-default">

      <!-- Main panel heading -->
      <div class="panel-heading">
        <h3 class="panel-title">
          Journey #<%= @journey.id %>
        </h3>
      </div>

      <!-- Main panel body -->
      <div class="panel-body">
        <div id="map_canvas" style="width:100%; height:300px">
        </div>

        <p> </p>

        <!-- Sub-panel for trip information -->
        <div class="panel panel-default">

          <!-- Sub-panel Header -->
          <div class="panel-heading">
            <h4 class="panel-title">
              Information
            </h4>
          </div>

          <!-- Sub-panel Body -->
          <div class="panel-body">

            <!-- Journey information -->
            <dl class="dl-horizontal">
              <dt>Origin</dt>
              <dd><%= @journey.origin %></dd>

              <dt>Destination</dt>
              <dd><%= @journey.destination %></dd>

              <dt>Date</dt>
              <dd class='timestring'><%= @journey.date %></dd>

              <dt>Duration</dt>
              <dd><%= (@uber_duration.to_i / 60) %> minutes</dd>

              <dt>Price UberX</dt>
              <dd><%= @uberx_estimate %></dd>

              <dt>Price uberPOOL</dt>
              <dd><%= @uberpool_estimate %></dd>
            </dl>

            <a class="btn btn-primary" href="https://m.uber.com/ul/?action=setPickup&client_id=2oVqH3_uKKBif3xXNrXY-EpG5hLjguJi&pickup[formatted_address]=360%20East%20South%20Water%20Street%2C%20Chicago%2C%20IL%2C%20United%20States&pickup[latitude]=<%= @start_lat %>&pickup[longitude]=<%= @start_lng %>&dropoff[formatted_address]=Chicago%20Booth%20Harper%20Center%2C%20South%20Woodlawn%20Avenue%2C%20Chicago%2C%20IL%2C%20United%20States&dropoff[latitude]=<%= @end_lat %>&dropoff[longitude]=<%= @end_lng %>" target="_blank">
              <i class="fa fa-car" aria-hidden="true"></i>
                Request Uber
            </a>

          </div>
        </div>

        <!-- Sub-panel for passengers -->
        <div class="panel panel-default">

          <!-- Sub-panel header -->
          <div class="panel-heading">
            <h4 class="panel-title">
              Passengers
            </h4>
          </div>

          <!-- Sub-panel body -->
          <div class="panel-body">

            <!-- Media list -->
            <ul class="media-list">

              <!-- Organizer element -->
              <li class="media">
                <div class="media-body">
                  <h5 class="media-heading">
                    <a href="/users/<%= @journey.organizer.id %>">
                      <%= @journey.organizer.username %> (Organizer)
                    </a>
                    <small style="float: right; font-style: italic">
                      created journey <%= time_ago_in_words(@journey.created_at) %> ago
                    </small>
                  </h5>
                </div>
              </li>

              <% @journey.users.each do |seat| %>

              <!-- Rider element -->
              <li class="media">
                <div class="media-body">
                  <h5 class="media-heading">
                    <a href="/users/<%= seat.id %>">
                      <%= seat.username %>
                    </a>
                    <small style="float: right; font-style: italic">
                      joined journey <%= time_ago_in_words(Seat.find_by(:journey_id => @journey.id).created_at) %> ago
                    </small>
                  </h5>
                </div>
              </li>

              <% end %>

            </ul>
            <!-- Panel body -->
          </div>
          <!-- Sub-panel -->
        </div>

        <!-- Sub-panel for comments -->
        <div class="panel-group">
          <div class="panel panel-default">
            <!-- Sub-panel heading -->
            <div class="panel-heading">
              <h4 class="panel-title">
                <a data-toggle="collapse" aria-expanded="false" href="#collapse_comments">
                  Comments
                </a>
              </h4>
            </div>

            <!-- Collapse comments -->
            <div id="collapse_comments" class="panel-collapse collapse">

              <!-- Sub-panel body -->
              <div class="panel-body">

                <% @journey.comments.each do |comment| %>

                <!-- List for comments -->
                <ul class="media-list">
                  <li class="media">
                    <div class="media-body">
                      <h5 class="media-heading">
                        <a href="/users/<%= comment.user_id %>">
                          <%= comment.user.username %>
                        </a>
                        <small style="float: right; font-style: italic">
                          <%= time_ago_in_words(comment.created_at) %>ago
                        </small>
                      </h5>
                      <%= comment.body %>
                    </div>
                  </li>
                </ul>

                <% end %>

                <!-- Form for new comment -->
                <form action="/create_comment" method="post">
                  <!-- Hidden input for authenticity token to protect from forgery -->
                  <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
                  <input type="hidden" name="journey_id" value="<%= @journey.id %>">
                  <input type="hidden" name="user_id" value="<%= current_user.id %>">

                  <!-- Label and input for body -->
                  <div class="form-group">
                    <label for="body" class="sr-only">
                      Body
                    </label>

                    <div class="input-group">
                      <input type="text" id="body" name="body" placeholder="Add a comment..." class="form-control" required>

                      <span class="input-group-btn">
                        <button class="btn btn-default" type="submit">
                          <i class="fa fa-commenting-o"></i>
                        </button>
                      </span>
                    </div>
                  </div>
                </form>
                <!-- Sub-panel body -->
              </div>

            </div>

          </div>

        </div>

        <!-- Buttons -->
        <% if @journey.organizer_id == current_user.id %>

        <div class="btn-group btn-group-justified">

          <div class="btn-group">
            <a href="/journeys" class="btn btn-primary">
              <i class="fa fa-chevron-left"></i>
            </a>
          </div>

          <div class="btn-group">
            <a href="/journeys/<%= @journey.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
          </div>

          <div class="btn-group">
            <a href="/delete_journey/<%= @journey.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>

        </div>

        <% else %>

        <div class="btn-group btn-group-justified">

          <div class="btn-group">
            <a href="/journeys" class="btn btn-primary">
              <i class="fa fa-chevron-left"></i>
            </a>
          </div>

          <div class="btn-group">
            <form action="/create_seat" method="post">
              <!-- Hidden input for authenticity token to protect from forgery -->
              <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
              <!-- Label and input for journey_id -->
              <input type="hidden" name="journey_id" value="<%= @journey.id %>">
              <!-- Label and input for user_id -->
              <input type="hidden" name="user_id" value="<%= current_user.id %>">
              <!-- Button for form -->
              <button class="btn btn-success">
                Join
              </button>
            </form>
          </div>

        </div>

      </div>

    </div>

  </div>

  <% end %>

</div>

